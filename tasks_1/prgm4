//4. Generate a Lower Triangle Matrix of column number with the number of rows and columns as given by the user.
#include <stdio.h>

int main() {
    int i,j, rows;
    printf("Enter the number of rows: ");
    scanf("%d", &rows);
    for ( i = 1; i <= rows; i++) 
    {
        for ( j = 1; j <=i;j++) 
        {
             printf("%d", j);
        }
        printf("\n");
    }

    return 0;
}
